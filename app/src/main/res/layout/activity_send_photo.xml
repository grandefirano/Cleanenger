<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SendPhotoActivity">

    <ImageView
        android:id="@+id/photoToSendImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="70dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="194dp"
        android:layout_height="59dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:text="Send"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancelButton"
        app:layout_constraintTop_toBottomOf="@+id/photoToSendImageView" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="193dp"
        android:layout_height="58dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="2dp"
        android:text="Cancel"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoToSendImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>