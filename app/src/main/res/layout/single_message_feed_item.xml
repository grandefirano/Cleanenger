<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/nameOfPersonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/personImageView"
            android:fontFamily="@font/roboto"
            android:text=""
            android:textColor="@color/colorTextSecondary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/messageOfPersonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameOfPersonTextView"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/messageDateTextView"
            android:layout_toEndOf="@+id/personImageView"
            android:text=""
            android:typeface="normal"
            android:textSize="14sp"
            android:maxLines="2"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/messageDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:textSize="14sp"
            android:text="@string/date_chat" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>