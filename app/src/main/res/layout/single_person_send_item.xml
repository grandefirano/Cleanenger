<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="4dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/nameOfPersonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/personImageView"
            android:fontFamily="@font/roboto"
            android:text=""
            android:textColor="@color/colorTextSecondary"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkboxOfPerson"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_check_box_outline_blank_grey"
            android:clickable="false"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/check_send_activity" />




    </RelativeLayout>


</androidx.cardview.widget.CardView>