<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="15dp"
    android:layout_below="@id/chatMessageDateTextView">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/messagePersonImageView"/>

    <TextView
        android:id="@+id/messagePersonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_right_chat_row"
        android:layout_toEndOf="@+id/messagePersonImageView"
        android:text="message"
        android:padding="8dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentEnd="true"

        />


</RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/chatMessageDateTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:visibility="gone"
        />
</RelativeLayout>